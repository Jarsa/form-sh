<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_mrp_production_product_alternative_form">
        <field name="name">view.mrp.production.product.alternative.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="after">
                <div class="alert alert-warning" role="alert" style="margin-bottom:0px;" attrs="{'invisible': [('has_lines_wo_stock', '=', False)]}">
                    <strong><i class="fa fa-warning"/>Warning!</strong> There are some products without stock available. Click<strong><button name="%(action_mrp_production_bom_alternative_wizard)d" type="action" string="here" style="background:none! important; color:inherit; border:none;  font: inherit; border-bottom:1px solid #444; cursor: pointer; text-transform: lowercase;"/></strong>to change it to an alternative Bill of Materials.
                </div>
                <field name="has_lines_wo_stock" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='open_produce_product']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', '|', '|', '|', ('is_locked', '=', False), ('check_to_done', '=', True), ('availability', 'not in', ['partially_available', 'assigned']), ('state', 'not in', ('confirmed','progress')), ('routing_id', '!=', False), ('has_lines_wo_stock', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
