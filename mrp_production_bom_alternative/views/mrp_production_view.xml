<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_mrp_production_product_alternative_form">
        <field name="name">view.mrp.production.product.alternative.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="after">
                <div class="alert alert-warning" role="alert" style="margin-bottom:0px;" attrs="{'invisible': [('availability', '!=', 'waiting')]}">
                    <strong><i class="fa fa-warning"/>Warning!</strong> There are some products without stock available. Click<strong><button name="%(action_mrp_production_bom_alternative_wizard)d" type="action" string="here" style="background:none! important; color:inherit; border:none;  font: inherit; border-bottom:1px solid #444; cursor: pointer; text-transform: lowercase;"/></strong>to change it to an alternative Bill of Materials.
                </div>
            </xpath>
        </field>
    </record>
</odoo>
