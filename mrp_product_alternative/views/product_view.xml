<?xml version="1.0" encoding="UTF-8"?>
<odoo>
     <record id="view_product_template_alternative_form" model="ir.ui.view">
        <field name="name">view.product.template.alternative.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="alternative_products" string="Alternative Products" attrs="{'invisible': [('type', '!=', 'product')]}">
                    <field name="alternative_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="product_id" invisible="1"/>
                            <field name="alternative_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <record id="view_product_product_alternative_form" model="ir.ui.view">
        <field name="name">view.product.product.alternative.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="alternative_products" string="Alternative Products">
                    <field name="alternative_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="product_id" invisible="1"/>
                            <field name="alternative_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
