<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_picking_form_stock_uom_equivalence" model="ir.ui.view">
        <field name="name">view.move.picking.form.stock.uom.equivalencew</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tmpl_id']" position="before">
                <label for="equivalent_product_uom_qty"/>
                <div>
                    <field name="equivalent_product_uom_qty" class="oe_inline" groups="uom.group_uom"/>
                    <field name="equivalent_uom_id" class="oe_inline" groups="uom.group_uom"/>
                </div>
            </xpath>
            <xpath expr="//group[@name='quants_grp']" position="inside">
                <label for="equivalent_reserved_availability"/>
                <div>
                    <field name="equivalent_reserved_availability" class="oe_inline" groups="uom.group_uom"/>
                    <field name="equivalent_uom_id" class="oe_inline" groups="uom.group_uom"/>
                </div>
            </xpath>
        </field>
    </record>
    <record id="view_stock_move_operations_stock_uom_equivalence" model="ir.ui.view">
        <field name="name">view_stock_move_operations.stock.uom.equivalencew</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]/group[1]" position="inside">
                <label for="equivalent_quantity_done" groups="uom.group_uom"/>
                <div class="o_row" groups="uom.group_uom">
                    <span><field name="equivalent_quantity_done" readonly="1" nolabel="1"/></span>
                    <span attrs="{'invisible': [('state', '=', 'done')]}"> / </span>
                    <span><field name="equivalent_reserved_availability" nolabel="1" attrs="{'invisible': [('state', '=', 'done')]}" /></span>
                    <span><field name="equivalent_uom_id" readonly="1" nolabel="1"/></span>
                </div>
            </xpath>
        </field>
    </record>
    <record id="view_stock_move_line_operation_tree_stock_uom_equivalence" model="ir.ui.view">
        <field name="name">view.stock.move.line.operation.tree.stock.uom.equivalencew</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_qty']" position="after">
                <field name="equivalent_product_uom_qty" invisible="not context.get('show_reserved_quantity')" groups="uom.group_uom"/>
                <field name="equivalent_qty_done" groups="uom.group_uom"/>
                <field name="equivalent_uom_id" groups="uom.group_uom"/>
            </xpath>
        </field>
    </record>
</odoo>
