<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_picking_form_stock_uom_equivalence" model="ir.ui.view">
        <field name="name">view.picking.form.stock.uom.equivalencew</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_ids_without_package']/tree/field[@name='product_uom_qty']" position="after">
                <field name="equivalent_product_uom_qty" groups="uom.group_uom"/>
                <field name="equivalent_qty_done" groups="uom.group_uom"/>
                <field name="equivalent_uom_id" groups="uom.group_uom"/>
            </xpath>
             <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='reserved_availability']" position="after">
                <field name="equivalent_product_uom_qty" groups="uom.group_uom"/>
                <field name="equivalent_reserved_availability" groups="uom.group_uom" attrs="{'column_invisible': (['|','|', ('parent.state','=', 'done'), ('parent.picking_type_code', '=', 'incoming'),'&amp;',('parent.immediate_transfer', '=', True), ('parent.is_locked', '=', True)])}"/>
                <field name="equivalent_quantity_done" groups="uom.group_uom"/>
                <field name="equivalent_uom_id" groups="uom.group_uom"/>
            </xpath>
        </field>
    </record>
</odoo>
