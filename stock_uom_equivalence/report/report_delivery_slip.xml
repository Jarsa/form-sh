<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_delivery_document_stock_equivalence" inherit_id="stock.report_delivery_document">
        <xpath expr="//table[2]/thead/tr/th[2]" position="after">
            <th><strong>Equivalent Quantity</strong></th>
        </xpath>
        <xpath expr="//table[2]/tbody/tr[1]/td[2]" position="after">
            <td>
                <span t-field="move.equivalent_product_uom_qty" groups="uom.group_uom"/>
                <span t-field="move.equivalent_uom_id" groups="uom.group_uom"/>
            </td>
        </xpath>
    </template>
</odoo>
