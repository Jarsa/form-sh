<?xml version="1.0"?>
<odoo>
    <template id="report_invoice_document_mx_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//t[1]/t[2]" position="replace"></xpath>
        <xpath expr="//div[@class='page']" position="replace">
            <!-- name and adress -->
            <t t-if="o.l10n_mx_edi_cfdi_uuid">
                <!--New global variables-->
                <t t-set="xml" t-value="o.l10n_mx_edi_get_xml_etree()"/>
                <t t-set="tfd" t-value="o.l10n_mx_edi_get_tfd_etree(xml)"/>
                <t t-set="tfd_original_string" t-value="o._get_l10n_mx_edi_cadena()"/>
            </t>
            <div class="page">
                <div class="pull-right">
                    <h4>
                        <span t-if="o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')">Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Devolution</span>
                        <span t-if="o.type == 'out_refund'">Credit Note</span>
                        <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                        <span t-field="o.number"/>
                    </h4>
                    <strong>Picking:</strong>
                    <p t-if="o.get_picking()" t-esc="o.get_picking()"/>
                </div>
                <t t-if="not o.l10n_mx_edi_cfdi_uuid and o.l10n_mx_edi_is_required()">
                    <!-- due to HTML preview for device responsive -->
                    <button t-attf-class="btn-danger #{'btn' if report_type != 'html' else ''}">
                        <h1>A signature of this invoice is required, but it is not signed.</h1>
                    </button>
                </t>
                <div class="row">
                    <div class="col-6">
                        <address/>
                        <strong>Invoiced to:</strong><br/>
                        <span t-field="o.partner_id"/><br/>
                        <span t-esc="o.partner_id.street_name + ' '"/>
                        <span t-field="o.partner_id.street_number"/><br/>
                        <span t-field="o.partner_id.street2"/>
                        <span t-if="o.partner_id.l10n_mx_edi_colony" t-field="o.partner_id.l10n_mx_edi_colony"/>
                        <span t-if="o.partner_id.l10n_mx_edi_locality" t-field="o.partner_id.l10n_mx_edi_locality"><br/></span>
                        <span t-esc="'C.P.' + o.partner_id.zip"/><br/>
                        <span t-field="o.partner_id.city"/>
                        <span t-field="o.partner_id.state_id.name"/><br/>
                        <span t-field="o.partner_id.country_id"/>
                        <t t-if="o.l10n_mx_edi_cfdi_uuid">
                            <span t-if="o.company_id.vat != o.l10n_mx_edi_cfdi_supplier_rfc">XML VAT: <span t-esc="o.l10n_mx_edi_cfdi_supplier_rfc"></span></span>
                        </t>
                    </div>
                    <div class="col-6">
                        <strong>Delivered to: </strong><br/>
                        <span t-field="o.partner_id"/><br/>
                        <span t-esc="o.partner_id.street_name + ' '"/>
                        <span t-field="o.partner_id.street_number"/><br/>
                        <span t-field="o.partner_id.street2"/>
                        <span t-if="o.partner_id.l10n_mx_edi_colony" t-field="o.partner_id.l10n_mx_edi_colony"/>
                        <span t-if="o.partner_id.l10n_mx_edi_locality" t-field="o.partner_id.l10n_mx_edi_locality"><br/></span>
                        <span t-esc="'C.P.' + o.partner_id.zip"/><br/>
                        <span t-field="o.partner_id.city"/>
                        <span t-field="o.partner_id.state_id.name"/><br/>
                        <span t-field="o.partner_id.country_id"/>
                    </div>
                </div>
                <br/>
                <table style="border: none; font-size: 10px;">
                    <tr>
                        <td t-if="o.date_invoice" style="border: none;"><strong style="margin-right:14px;">Invoice Date: </strong></td>
                        <td t-if="o.date_due and o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')" style="border: none;"><strong style="margin-right:14px;">Due Date: </strong></td>
                        <td t-if="o.name" style="border: none;"><strong style="margin-right:14px;">Partner order: </strong></td>
                        <td t-if="o.currency_id.name == 'USD'" style="border: none;"><strong style="margin-right:14px;">Rate: </strong></td>
                        <td t-if="xml.Receptor.get('UsoCFDI', False)" style="border: none;"><strong style="margin-right:14px;">CFDI Usage: </strong></td>
                        <td t-if="o.l10n_mx_edi_payment_method_id" style="border: none;"><strong style="margin-right:14px;">Payment Way: </strong></td>
                        <td t-if="xml.get('formaDePago', xml.get('MetodoPago'))" style="border: none;  background-color: white;"><strong style="margin-right:14px;">Payment Method:</strong></td>
                        <td t-if="o.payment_term_id.name" style="border: none; background-color: white;"><strong style="margin-right:14px;">Payment conditions:</strong></td>
                    </tr>
                    <tr>
                        <td style="border: none;" t-if="o.date_invoice" >
                            <span t-field="o.date_invoice"/>
                        </td>
                        <td style="border: none;" t-if="o.date_due and o.type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')">
                            <span t-field="o.date_due"/>
                        </td>
                        <td style="border: none;" t-if="o.name">
                            <span t-field="o.name"/>
                        </td>
                        <td style="border: none;" t-if="o.currency_id.name == 'USD'">
                            <p t-esc="'%.2f' % (float(o.get_rate()))"/>
                        </td>
                        <t t-if="xml.Receptor.get('UsoCFDI', False)">
                            <t t-set="usage" t-value="xml.Receptor.get('UsoCFDI')"/>
                            <td style="border: none;">
                                <span t-esc="usage"/>
                            </td>
                        </t>
                        <td t-if="o.l10n_mx_edi_payment_method_id" style="border: none;"><p t-esc="o.l10n_mx_edi_payment_method_id.code"/>
                        </td>
                        <td t-if="xml.get('formaDePago', xml.get('MetodoPago'))" style="border: none;  background-color: white;">
                            <span t-esc="xml.get('formaDePago', xml.get('MetodoPago'))"/>
                        </td>
                        <td t-if="o.payment_term_id.name" style="border: none;  background-color: white;">
                            <span t-esc="o.payment_term_id.name"/>
                        </td>
                    </tr>
                </table>
                <div id="informations">
                    <div  name="reference"/>
                </div>
                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                <table class="table table-sm o_main_table" name="invoice_line_table">
                        <thead  style="background-color: #F36B21; color: white;">
                            <tr style="font-size: 10px;">
                                <t t-set="colspan" t-value="6"/>
                                <th class="text-left"><span>CODE</span></th>
                                <th class="text-left"><span>Description</span></th>
                                <th t-if="o.l10n_mx_edi_cfdi_uuid and xml.get('Version')">
                                    <span>Product code</span>
                                    <t t-set="colspan" t-value="colspan+1"/>
                                </th>
                                <th class="text-right"><span>Quantity</span></th>
                                <th class="text-right" t-if="o.l10n_mx_edi_cfdi_uuid and xml.get('Version')">
                                    <span>Unit code</span>
                                    <t t-set="colspan" t-value="colspan+1"/>
                                </th>
                                <th t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                                <th t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.(%)</span>
                                    <t t-set="colspan" t-value="colspan+1"/>
                                </th>
                                <th t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                                <th class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>

                            <t t-foreach="o.invoice_line_ids" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr style="font-size: 10px;" t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td><span t-field="line.product_id.default_code"/></td>
                                        <td name="account_invoice_line_name"><span t-field="line.name"/></td>
                                        <td t-if="o.l10n_mx_edi_cfdi_uuid and xml.get('Version')"><span t-field="line.product_id.l10n_mx_edi_code_sat_id.code"/></td>
                                        <td class="text-right">
                                            <span t-field="line.quantity"/>
                                            <span t-field="line.uom_id"  groups="uom.group_uom"/>
                                        </td>
                                        <td class="text-right" t-if="o.l10n_mx_edi_cfdi_uuid and xml.get('Version')"><span t-field="line.uom_id.l10n_mx_edi_code_sat_id.code"/></td>
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.invoice_line_tax_ids))"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td t-att-colspan="colspan">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td t-att-colspan="colspan">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td t-att-colspan="colspan">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                </table>
                <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table style="font-size: 10px;" class="table table-sm">
                                    <tr class="border-black o_subtotal">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                        <tr style="">
                                            <t t-if="len(o.tax_line_ids) == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td><span t-esc="amount_by_group[0]"/></td>
                                                <td class="text-right o_price_total">
                                                    <span t-esc="amount_by_group[3]" />
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr style="background-color: #F36B21; color: white;">
                                        <td style="background-color: #F36B21; color: white;"><strong>Total</strong></td>
                                        <td style="background-color: #F36B21; color: white;" class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                </div>
                <t t-if="o.l10n_mx_edi_cfdi_uuid">
                    <p>
                        <span t-esc="o.l10n_mx_edi_amount_to_text()"/>
                    </p>
                </t>
                <p t-if="o.comment" name="comment">
                    <span t-field="o.comment"/>
                </p>
                <p t-if="o.origin">
                    <span>Remission:</span><span t-field="o.origin"/>
                </p>
                <t t-if="o.l10n_mx_edi_cfdi_uuid">
                    <div class="row" id='complement'>
                        <div class="barcode col-3">
                            <t t-set="sello" t-value="xml.get('Sello', 'No identificado')[-8:]"/>
                            <img alt="Barcode" t-att-src="'/report/barcode/?type=QR&amp;value=%s' % quote_plus(
                                'https://verificacfdi.facturaelectronica.sat.gob.mx/default.aspx?' + keep_query(
                                    re=o.l10n_mx_edi_cfdi_supplier_rfc, rr=o.l10n_mx_edi_cfdi_customer_rfc,
                                    tt=o.l10n_mx_edi_cfdi_amount, id=o.l10n_mx_edi_cfdi_uuid)
                                    + '&amp;fe=%s' % quote_plus(
                                        sello, 'utf-8', 'strict', '=/').replace('%2B', '+'))"/>
                        </div>
                        <div class="complement-details col-9">
                            <div class="digital-stamp">
                                <span>Digital stamp of the emitter</span>
                            </div>
                            <div class="digital-stamp-content">
                                <span t-esc="xml.get('sello', xml.get('Sello', 'No identificado'))"/>
                            </div>
                            <div class="digital-stamp">
                                <span>Digital stamp SAT</span>
                            </div>
                            <div class="digital-stamp-content">
                                <span t-esc="tfd.get('selloSAT', tfd.get('SelloSAT', 'No identificado'))"/>
                            </div>
                            <div class="digital-stamp">
                                <span>Original chain complement of digital certification SAT</span>
                            </div>
                            <div class="digital-stamp-content">
                                <span class="nowrap" t-esc="tfd_original_string"/>
                            </div>
                            <div t-if="xml.Emisor.xpath('cfdi:ExpedidoEn', namespaces=xml.nsmap)" class="digital-stamp">
                                <span>Issued from</span>
                            </div>
                            <div t-if="xml.Emisor.xpath('cfdi:ExpedidoEn', namespaces=xml.nsmap)" class="digital-stamp-content">
                                <span t-esc="' | '.join([ '%s: %s' % (key, value) for key, value in xml.Emisor.ExpedidoEn.items()])"/>
                            </div>
                            <div class="digital-stamp">
                                <span>Extra Info</span>
                            </div>
                            <div class="digital-stamp-content">
                                <span>Emitter certificate:</span> <span t-esc="xml.get('noCertificado', xml.get('NoCertificado'))"/>
                                <span> | SAT Certificate:</span> <span t-esc="tfd.get('NoCertificadoSAT')"/>
                                <span> | Expedition place:</span> <span t-esc="xml.get('LugarExpedicion')"/>
                                <span> | Fiscal Regime:</span><span t-esc="xml.Emisor.get('RegimenFiscal', '')"/>
                                <span> | Emission Date:</span> <span t-esc="xml.get('fecha', xml.get('Fecha', '')).replace('T', ' ')"/>
                                <span> | Certification Date:</span> <span t-esc="tfd.get('FechaTimbrado', '').replace('T', ' ')"/>
                                <span> | Fiscal Folio:</span> <span t-esc="tfd.get('UUID')"/>
                            </div>
                            <div class="digital-stamp-content text-center">
                                <strong>This document is a printed representation of a CFDI</strong>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </xpath>
    </template>
    <template id="external_layout_boxed_inherit_form" inherit_id="web.external_layout_boxed">
        <xpath expr="div[1]/div[1]/div[1]/div[2]" position="replace">
             <div class="col-6 text-right mb4">
                    <h4 class="mt0" t-field="company.report_header"/>
                    <div class="mb4" style="font-size:10px;">
                        <strong style="font-size:11px;" t-field="company.name"/><br/>
                        <span t-esc="'TEL '+ company.partner_id.phone"/><br/>
                        <span t-esc="'RFC '+ company.partner_id.vat"/><br/>
                        <span t-esc="company.street_name + ' '"/>
                        <span t-field="company.street_number"/><br/>
                        <span t-field="company.street2"/>
                        <span t-if="company.l10n_mx_edi_colony" t-field="company.l10n_mx_edi_colony"/>
                        <span t-if="company.l10n_mx_edi_locality" t-field="company.l10n_mx_edi_locality"><br/></span>
                        <span t-esc="'C.P.' + company.zip"/><br/>
                        <span t-field="company.city"/>
                        <span t-field="company.state_id.name"/><br/>
                        <span t-field="company.country_id"/>
                    </div>
                </div>
        </xpath>
    </template>
</odoo>
