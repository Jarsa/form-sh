<?xml version="1.0"?>
<odoo>
    <template id="report_invoice_document_mx_inherit" priority="1000" inherit_id="account.report_invoice_document">
        <xpath expr="//t[1]/t[2]" position="replace"></xpath>
        <xpath expr="//div[hasclass('page')]" position="replace">
            <!--New global variables-->
            <t t-set="cfdi_vals" t-value="o._l10n_mx_edi_decode_cfdi()"/>
            <div class="page">
                <div class="pull-right">
                    <h4>
                        <span t-if="o.move_type == 'out_invoice'">Invoice&amp;nbsp;</span>
                        <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                        <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                        <span t-field="o.name"/>
                    </h4>
                    <span>Fiscal Folio:</span><span t-esc="o.l10n_mx_edi_cfdi_uuid"/><br/>
                    <strong>Picking:</strong>
                    <p t-if="o.get_picking()" t-esc="o.get_picking()"/>
                </div>
                <t t-if="not o.l10n_mx_edi_cfdi_uuid and o.l10n_mx_edi_cfdi_request in ('on_invoice', 'on_refund')">
                    <!-- due to HTML preview for device responsive -->
                    <button t-attf-class="btn-danger #{'btn' if report_type != 'html' else ''}">
                        <h1>A signature of this invoice is required, but it is not signed.</h1>
                    </button>
                </t>
                <div class="row">
                    <div class="col-6">
                        <address/>
                        <strong>Invoiced to:</strong><br/>
                        <span t-field="o.partner_id"/><br/>
                        <span t-esc="o.partner_id.street_name + ' ' if o.partner_id.street_name else ''"/>
                        <span t-field="o.partner_id.street_number"/><br/>
                        <span t-field="o.partner_id.street2"/>
                        <span t-if="o.partner_id.l10n_mx_edi_colony" t-field="o.partner_id.l10n_mx_edi_colony"/>
                        <span t-if="o.partner_id.l10n_mx_edi_locality" t-field="o.partner_id.l10n_mx_edi_locality"><br/></span>
                        <span t-esc="'C.P.' + o.partner_id.zip if o.partner_id.zip else ''"/><br/>
                        <span t-field="o.partner_id.city"/>
                        <span t-field="o.partner_id.state_id.name"/><br/>
                        <span t-field="o.partner_id.country_id"/><br/>
                        <span t-field="o.partner_id.vat"/>
                    </div>
                    <div class="col-6">
                        <strong>Delivered to: </strong><br/>
                        <span t-field="o.partner_shipping_id"/><br/>
                        <span t-esc="o.partner_shipping_id.street_name + ' ' if o.partner_shipping_id.street_name else ''"/>
                        <span t-field="o.partner_shipping_id.street_number"/><br/>
                        <span t-field="o.partner_shipping_id.street2"/>
                        <span t-if="o.partner_shipping_id.l10n_mx_edi_colony" t-field="o.partner_shipping_id.l10n_mx_edi_colony"/>
                        <span t-if="o.partner_shipping_id.l10n_mx_edi_locality" t-field="o.partner_shipping_id.l10n_mx_edi_locality"><br/></span>
                        <span t-esc="'C.P.' + o.partner_shipping_id.zip if o.partner_shipping_id.zip else ''"/><br/>
                        <span t-field="o.partner_shipping_id.city"/>
                        <span t-field="o.partner_shipping_id.state_id.name"/><br/>
                        <span t-field="o.partner_shipping_id.country_id"/><br/>
                        <span t-field="o.partner_shipping_id.vat"/>
                    </div>
                </div>
                <br/>
                <table style="border: none; font-size: 10px;">
                    <tr>
                        <td t-if="o.invoice_date" style="border: none;"><strong style="margin-right:14px;">Invoice Date: </strong><strong t-esc="' '"/></td>
                        <td t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')" style="border: none; text-align: center;"><strong style="margin-right:14px;">Due Date: </strong></td>
                        <td t-if="o.ref" style="border: none;"><strong style="margin-right:14px;">Partner order: </strong></td>
                        <td t-if="o.currency_id.name == 'USD'" style="border: none;"><strong style="margin-right:14px;">Rate: </strong> <strong t-esc="' '"/>&amp;nbsp;</td>
                        <td t-if="cfdi_vals.get('usage')" style="border: none; text-align: center;"><strong style="margin-right:14px;">CFDI Usage: </strong>&amp;nbsp;&amp;nbsp;</td>
                        <td t-if="o.l10n_mx_edi_payment_method_id" style="border: none; text-align: center;"><strong style="margin-right:14px;">Payment Way: </strong>&amp;nbsp;</td>
                        <td t-if="cfdi_vals.get('payment_method')" style="border: none;  background-color: white;"><strong style="margin-right:14px;">Payment Method:</strong></td>
                        <td t-if="o.invoice_payment_term_id.name" style="border: none; background-color: white;"><strong style="margin-right:16px;">Payment conditions:</strong></td>
                        <td style="border: none; background-color: white;"><strong>Fiscal Regime:</strong></td>
                    </tr>
                    <tr>
                        <td style="border: none;" t-if="o.invoice_date" >
                            <span t-field="o.invoice_date"/>
                        </td>
                        <td style="border: none; text-align: center;" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')">
                            <span t-field="o.invoice_date_due"/>
                        </td>
                        <td style="border: none;" t-if="o.ref">
                            <span t-field="o.ref"/>
                        </td>
                        <td style="border: none;" t-if="o.currency_id.name == 'USD'">
                            <p t-esc="'%.4f' % (float(o.get_rate()))"/>
                        </td>
                        <t t-if="cfdi_vals.get('usage')">
                            <t t-set="usage" t-value="cfdi_vals.get('usage')"/>
                            <td style="border: none;">
                                <p><span t-esc="' ' + usage"/> - <span t-field="o.l10n_mx_edi_usage"/></p>
                            </td>
                        </t>
                        <td class="text-center" t-if="o.l10n_mx_edi_payment_method_id" style="border: none;"><p t-esc="o.l10n_mx_edi_payment_method_id.code + ' - ' + o.l10n_mx_edi_payment_method_id.name"/>
                        </td>
                        <td t-if="cfdi_vals.get('payment_method') == 'PUE'" style="border: none;  background-color: white;">
                            <span t-esc="cfdi_vals.get('payment_method') + ' - ' + 'Pago en una sola exhibiciÃ³n'"/>
                        </td> 
                          <td t-if="cfdi_vals.get('payment_method') == 'PPD'" style="border: none;  background-color: white;">
                            <span t-esc="cfdi_vals.get('payment_method') + ' - ' + ' Pago en parcialidades o diferido'"/>
                        </td>
                        <td t-if="o.invoice_payment_term_id.name" style="border: none;  background-color: white;">
                            <span t-esc="o.invoice_payment_term_id.name"/>
                        </td>                        
                        <td style="border: none;  background-color: white;"><span t-field="o.company_id.partner_id.property_account_position_id"/></td>
                    </tr>
                </table>
                <div id="informations">
                    <div name="reference"/>
                </div>
                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                <table class="table table-sm o_main_table" name="invoice_line_table">
                    <thead  style="background-color: #F36B21; color: white;">
                        <tr style="font-size: 10px;">
                            <t t-set="colspan" t-value="6"/>
                            <th class="text-right"><span>Quantity</span></th>
                            <th class="text-left"><span>CODE</span></th>
                            <th class="text-left"><span>Description</span></th>
                            <th t-if="any(o.invoice_line_ids.mapped('product_id.unspsc_code_id'))">
                                <span>Product code</span>
                                <t t-set="colspan" t-value="colspan+1"/>
                            </th>
                            <th class="text-right" t-if="any(o.invoice_line_ids.mapped('product_uom_id.unspsc_code_id'))">
                                <span>Unit code</span>
                                <t t-set="colspan" t-value="colspan+1"/>
                            </th>
                            <th t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                            <th t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>Disc.(%)</span>
                                <t t-set="colspan" t-value="colspan+1"/>
                            </th>
                            <th class="text-right">
                                <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>

                        <t t-foreach="o.invoice_line_ids" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                            <tr style="border: 1px solid black; font-size: 10px;" t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td class="text-right">
                                        <span t-esc="int(line.quantity)"/>
                                        <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                    </td>
                                    <td><span t-field="line.product_id.default_code"/></td>
                                    <td name="account_invoice_line_name"><span t-field="line.name"/></td>
                                    <td t-if="line.product_id.unspsc_code_id"><span t-field="line.product_id.unspsc_code_id.code"/></td>
                                    <td class="text-right" t-if="line.product_uom_id.unspsc_code_id"><span t-field="line.product_uom_id.unspsc_code_id.code"/></td>
                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                    </td>
                                    <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.discount"/>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td t-att-colspan="colspan">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td t-att-colspan="colspan">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td t-att-colspan="colspan">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
                <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table style="font-size: 10px;" class="table table-sm">
                                    <tr class="border-black o_subtotal">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-esc="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                        <tr style="">
                                            <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                                <td><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span class="text-nowrap"> on
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr style="background-color: #F36B21; color: white;">
                                        <td style="background-color: #F36B21; color: white;"><strong>Total</strong></td>
                                        <td style="background-color: #F36B21; color: white;" class="text-right">
                                            <span t-esc="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                </div>
                <p>
                    <span t-esc="o.company_id.currency_id.amount_to_text(o.amount_total)"/>
                </p>
                <p t-if="o.narration" name="narration">
                    <span t-field="o.narration"/>
                </p>
                <p t-if="o.name and o.move_type == 'out_invoice'">
                    <span>Remission:</span><span t-field="o.invoice_origin"/>
                </p>
                <p t-if="o.name and o.move_type == 'out_refund'">
                    <span>Invoice:</span><span t-field="o.invoice_origin"/>
                </p>
                <t t-if="o.l10n_mx_edi_cfdi_uuid">
                    <div class="row" id='complement'>
                        <div t-if="cfdi_vals.get('sello')" class="barcode col-3">
                        <img alt="Barcode" t-att-src="'/report/barcode/?type=QR&amp;value=%s&amp;width=180&amp;height=180' % quote_plus(
                            'https://verificacfdi.facturaelectronica.sat.gob.mx/default.aspx?' + keep_query(
                                re=o.l10n_mx_edi_cfdi_supplier_rfc, rr=o.l10n_mx_edi_cfdi_customer_rfc,
                                tt='%.*f' % (o.currency_id.decimal_places, o.l10n_mx_edi_cfdi_amount), id=o.l10n_mx_edi_cfdi_uuid)
                                + '&amp;fe=%s' % quote_plus(
                                    cfdi_vals['sello'][-8:], 'utf-8', 'strict', '=/').replace('%2B', '+'))"/>
                        </div>
                        <div class="complement-details col-9">
                            <div class="digital-stamp">
                                <span>Digital stamp of the emitter</span>
                            </div>
                            <div class="digital-stamp-content">
                                <span t-esc="cfdi_vals.get('sello')"/>
                            </div>
                            <div class="digital-stamp">
                                <span>Digital stamp SAT</span>
                            </div>
                            <div class="digital-stamp-content">
                                <span t-esc="cfdi_vals.get('selloSAT', cfdi_vals.get('SelloSAT', 'No identificado'))"/>
                            </div>
                            <div class="digital-stamp">
                                <span>Original chain complement of digital certification SAT</span>
                            </div>
                            <div class="digital-stamp-content">
                                <span class="nowrap" t-esc="tfd_original_string"/>
                            </div>
                            <!-- <div t-if="xml.Emisor.xpath('cfdi:ExpedidoEn', namespaces=xml.nsmap)" class="digital-stamp">
                                <span>Issued from</span>
                            </div>
                            <div t-if="xml.Emisor.xpath('cfdi:ExpedidoEn', namespaces=xml.nsmap)" class="digital-stamp-content">
                                <span t-esc="' | '.join([ '%s: %s' % (key, value) for key, value in xml.Emisor.ExpedidoEn.items()])"/>
                            </div> -->
                            <div class="digital-stamp">
                                <span>Extra Info</span>
                            </div>
                            <div class="digital-stamp-content">
                                <span>Emitter certificate:</span> <span t-esc="cfdi_vals.get('certificate_number')"/>
                                <span> | SAT Certificate:</span> <span t-esc="cfdi_vals.get('certificate_sat_number')"/>
                                <span> | Expedition place:</span> <span t-esc="cfdi_vals.get('expedition')"/>
                                <span> | Emission Date:</span> <span t-esc="cfdi_vals.get('emission_date_str')"/>
                                <span> | Certification Date:</span> <span t-esc="cfdi_vals.get('stamp_date')"/>
                            </div>
                            <div class="digital-stamp-content text-center">
                                <strong>This document is a printed representation of a CFDI</strong>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </xpath>
    </template>
    <template id="external_layout_boxed_inherit_form" inherit_id="web.external_layout_boxed">
        <xpath expr="div[1]/div[1]/div[1]/div[2]" position="replace">
             <div class="col-6 text-right mb4">
                    <h4 class="mt0" t-field="company.report_header"/>
                    <div class="mb4" style="font-size:10px;">
                        <strong style="font-size:11px;" t-field="company.name"/><br/>
                        <span t-esc="'TEL '+ company.partner_id.phone"/><br/>
                        <span t-esc="'RFC '+ company.partner_id.vat"/><br/>
                        <span t-esc="company.street_name + ' '"/>
                        <span t-field="company.street_number"/><br/>
                        <span t-field="company.street2"/>
                        <span t-if="company.l10n_mx_edi_colony" t-field="company.l10n_mx_edi_colony"/>
                        <span t-if="company.l10n_mx_edi_locality" t-field="company.l10n_mx_edi_locality"><br/></span>
                        <span t-esc="'C.P.' + company.zip"/><br/>
                        <span t-field="company.city"/>
                        <span t-field="company.state_id.name"/><br/>
                        <span t-field="company.country_id"/>
                    </div>
                </div>
        </xpath>
    </template>
</odoo>
