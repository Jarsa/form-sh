<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_category_validation_view_for_form" model="ir.ui.view">
        <field name="name">product.category.validation.view</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='first']" position='after'>
                <field name='validation_ids'>
                    <tree editable="bottom">
                        <field name='field_id'/>
                        <field name='make_required'/>
                        <field name='value'  attrs="{'invisible': [('hide_field', '!=', False)]}"/>
                        <field name='error_msg' required="True"/>
                        <field name='hide_field' invisible="1"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
