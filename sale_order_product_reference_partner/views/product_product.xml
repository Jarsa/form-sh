<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_product_reference_partner_form" model="ir.ui.view">
        <field name="name">sale.order.product.reference.partner.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="before">
                <field name="partner_ids" widget="many2many_tags" domain="[('customer','=',True)]" context="{'search_default_customer':1, 'show_address': 1, 'show_vat': True}" options="{&quot;always_reload&quot;: True}"/>
            </xpath>
        </field> 
    </record>
</odoo>
