<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_production_form">
        <field name="name">mrp_production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="is_surplus" invisible="1"/>
            </xpath>
        </field>
    </record>
    <record id="mrp.mrp_production_action" model="ir.actions.act_window">
        <field name="domain">[('is_surplus', '=', False)]</field>
        <field name="context">{'search_default_todo': True, 'create': False}</field>
    </record>
    <record id="mrp_production_surplus_action" model="ir.actions.act_window">
        <field name="name">Manufacturing Orders</field>
        <field name="res_model">mrp.production</field>
        <field name="context">{'search_default_todo': True,'default_is_surplus': True}</field>
        <field name="domain">[('is_surplus', '=', True)]</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
    </record>
    <menuitem action="mrp_production_surplus_action" id="menu_surplus" name="Surplus" parent="stock.menu_stock_warehouse_mgmt"/>
</odoo>
