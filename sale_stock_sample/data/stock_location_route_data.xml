<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="1">
    <record id="stock_sample_route" model="stock.location.route">
        <field name="name">Product Sample Route</field>
        <field name="sequence">10</field>
        <field name="sample_selectable" eval="True"/>
        <field name="product_selectable" eval="False"/>
    </record>
    <record id="stock_sample_route_cutomers_stock_rule" model="stock.rule">
        <field name="name">WH: Stock -&gt; Product Samples Location</field>
        <field name="action">pull</field>
        <field name="picking_type_id" ref="sale_stock_sample.stock_sample_op"/>
        <field name="location_src_id" ref="stock.stock_location_stock"/>
        <field name="location_id" ref="sale_stock_sample.stock_sample_location"/>
        <field name="procure_method">make_to_order</field>
        <field name="warehouse_id" ref="stock.warehouse0"/>
        <field name="group_propagation_option">propagate</field>
        <field name="propagate" eval="True"/>
        <field name="route_id" ref="sale_stock_sample.stock_sample_route"/>
    </record>
</odoo>
