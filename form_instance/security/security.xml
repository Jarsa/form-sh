<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="group_payable_form" model="res.groups">
        <field name="name">Payable</field>
        <field name="category_id" ref="base.module_category_accounting_and_finance"/>
        <field name="comment">The user will have access to payable accounts.</field>
        <field name="menu_access" eval="[(4, ref('account.menu_finance_payables')), (4, ref('account.menu_finance')), (4, ref('account_accountant.menu_accounting'))]"/>
        <field name="implied_ids" eval="[(4, ref('documents.group_documents_user')), (4, ref('hr_attendance.group_hr_attendance_user'))]"/>
    </record>
    <record id="group_receivable_form" model="res.groups">
        <field name="name">Receivable</field>
        <field name="category_id" ref="base.module_category_accounting_and_finance"/>
        <field name="comment">The user will have access to receivable accounts.</field>
        <field name="menu_access" eval="[(4, ref('account.menu_finance_receivables')), (4, ref('account.menu_finance')), (4, ref('account_accountant.menu_accounting'))]"/>
        <field name="implied_ids" eval="[(4, ref('documents.group_documents_user')), (4, ref('hr_attendance.group_hr_attendance_user'))]"/>
    </record>
    <record id="account.menu_finance_payables" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('base.group_no_one')), (4, ref('form_instance.group_payable_form')), (4, ref('account.group_account_manager'))]"/>
    </record>
    <record id="account.menu_finance_receivables" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('base.group_no_one')), (4, ref('form_instance.group_receivable_form')), (4, ref('account.group_account_manager'))]"/>
    </record>
</odoo>
