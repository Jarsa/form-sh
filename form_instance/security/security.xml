<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="group_mrp_workcenter_form" model="res.groups">
        <field name="name">User Workcenter</field>
        <field name="category_id" ref="base.module_category_mrp"/>
        <field name="comment">The user will have access to the centers where is follower.</field>
    </record>
    <record id="group_activate_cancel_form" model="res.groups">
        <field name="name">Authorize Cancelation</field>
        <field name="category_id" ref="base.module_category_accounting_and_finance"/>
        <field name="comment">The user will have access to activate button cancel.</field>
    </record>
    <record id="group_payable_form" model="res.groups">
        <field name="name">Payable</field>
        <field name="category_id" ref="base.module_category_accounting_and_finance"/>
        <field name="comment">The user will have access to payable accounts.</field>
        <field name="menu_access" eval="[(4, ref('account.menu_finance_payables')), (4, ref('account.menu_finance')), (4, ref('account_accountant.menu_accounting'))]"/>
        <field name="implied_ids" eval="[(4, ref('documents.group_documents_user'))]"/>
    </record>
    <record id="group_receivable_form" model="res.groups">
        <field name="name">Receivable</field>
        <field name="category_id" ref="base.module_category_accounting_and_finance"/>
        <field name="comment">The user will have access to receivable accounts.</field>
        <field name="menu_access" eval="[(4, ref('account.menu_finance_receivables')), (4, ref('account.menu_finance')), (4, ref('account_accountant.menu_accounting'))]"/>
        <field name="implied_ids" eval="[(4, ref('documents.group_documents_user'))]"/>
    </record>
    <record id="group_edit_product_mrp_user" model="res.groups">
        <field name="name">MRP Edit Products</field>
        <field name="comment">The user can edit only certain fields of products</field>
    </record>
    <record id="account.menu_finance_payables" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('base.group_no_one')), (4, ref('form_instance.group_payable_form')), (4, ref('account.group_account_manager'))]"/>
    </record>
    <record id="group_product_creation_form" model="res.groups">
        <field name="name">Products Creation</field>
        <field name="comment">The user will have access to Read, create and write product.product and product.template</field>
    </record>
    <record id="group_show_only_followers_stock_picking_type_form" model="res.groups">
        <field name="name">Show picking types to followers</field>
        <field name="comment">The user will have access to see the picking types in wich he is follower</field>
    </record>
    <record id="rule_show_followers_picking_types" model="ir.rule">
        <field name="name">Show picking types to followers</field>
        <field name="model_id" ref="stock.model_stock_picking_type"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="domain_force">[('message_partner_ids', 'in', [user.partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('form_instance.group_show_only_followers_stock_picking_type_form'))]"/>
    </record>
    <record id="account.menu_finance_receivables" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('base.group_no_one')), (4, ref('form_instance.group_receivable_form')), (4, ref('account.group_account_manager'))]"/>
    </record>
    <record id="group_purchase_request_manager_form" model="res.groups">
        <field name="name">Manager Form</field>
        <field name="category_id" ref="sale_request.module_category_sale_request"/>
        <field name="comment">The user will have only read access to Sale Request.</field>
    </record>
    <record model="ir.ui.menu" id="mrp.menu_mrp_unbuild">
        <field name="groups_id" eval="[(4, ref('base.group_no_one'))]"/>
    </record>
    <record id="group_send_production_to_scrap" model="res.groups">
        <field name="name">Can send production to scrap</field>
        <field name="comment">The users with this group are allowed to see the button "Scrap" in production form view and also in work order tablet view.</field>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>
    <record id="contacts.menu_country_partner" model="ir.ui.menu">
        <field name="groups_id" eval="[(4,ref('base.group_system'))]"/>
    </record>
    <record id="group_crm_manager_total" model="res.groups">
        <field name="name">Manager of CRM (Configuration)</field>
        <field name="comment">The user will have access to the configuration of the CRM.</field>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>
    <record id="group_update_so_status_form" model="res.groups">
        <field name="name">Update Sale Order Status</field>
        <field name="comment">The user will have access to update sale orders status.</field>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>
    <record id="group_allow_delete_prod_attachment" model="res.groups">
        <field name="name">Delete product attachment</field>
        <field name="comment">The user will have access to delete product atachments.</field>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>
    <record id="res_groups_project_follower" model="res.groups">
        <field name="name">Can see projects where is follower</field>
        <field name="comment">The user will have access to projects where is a follower.</field>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>
</odoo>
