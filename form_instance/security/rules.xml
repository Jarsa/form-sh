<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="payables_vendors_form" model="ir.rule">
        <field name="name">Payable Only Vendors</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">['|', '&amp;', ('customer', '=', False), ('supplier', '=', False), ('supplier', '=', True)]</field>
        <field name="groups" eval="[(4, ref('form_instance.group_payable_form'))]"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="perm_read" eval="True"/>
    </record>
    <record id="receivables_vendors_form" model="ir.rule">
        <field name="name">Receivable Only Customers</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">['|', '&amp;', ('customer', '=', False), ('supplier', '=', False), ('customer', '=', True)]</field>
        <field name="groups" eval="[(4, ref('form_instance.group_receivable_form'))]"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="perm_read" eval="True"/>
    </record>
    <record id="group_allow_edit_invoices" model="res.groups">
        <field name="name">Block invoice editing</field>
        <field name="comment">The users in this group aren't allowed to edit invoice fields</field>
        <field name="users" eval="[(4,ref('base.user_admin'))]"/>
    </record>
    <record id="workcenter_user_form" model="ir.rule">
        <field name="name">User workcenter</field>
        <field name="model_id" ref="mrp.model_mrp_workcenter"/>
        <field name="domain_force">[('message_partner_ids', 'in', [user.partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('form_instance.group_mrp_workcenter_form'))]"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="False"/>
        <field name="perm_read" eval="True"/>
    </record>
    <record id="crm_lead_follower_form" model="ir.rule">
        <field name="name">Follower Crm Lead</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="domain_force">[('message_partner_ids', 'in', [user.partner_id.id])]</field>
        <field name="perm_read" eval="True"/>
        <field name="groups" eval="[(4, ref('mrp_plm.group_plm_manager'))]"/>
    </record>
    <record id="project_project_follower_form" model="ir.rule">
        <field name="name">Project Project Follower</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="domain_force">[('message_partner_ids', 'in', [user.partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('form_instance.res_groups_project_follower'))]"/>
    </record>
</odoo>
