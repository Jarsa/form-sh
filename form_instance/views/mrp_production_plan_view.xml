<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_production_plan_custom_form">
        <field name="name">mrp_production_plan_product_name.form</field>
        <field name="model">mrp.production.plan</field>
        <field name="inherit_id" ref="mrp_production_plan.mrp_production_plan_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='product_id']" position="after">
                <field name="product_supplier_name"/>
            </xpath>
        </field>
    </record>
</odoo>
