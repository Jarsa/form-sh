<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="quality_point_ventacero_view_form">
        <field name="name">quality.point.ventacero.form</field>
        <field name="model">quality.point</field>
        <field name="inherit_id" ref="quality.quality_point_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tmpl_id']" position="after">
                <field name="routing_id" domain="[('product_id.product_tmpl_id', '=', product_tmpl_id)]" attrs="{'invisible': [('code', '!=', 'mrp_operation')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
