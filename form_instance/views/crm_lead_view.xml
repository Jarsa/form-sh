<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="crm_lead_custom_form">
        <field name="name">crm.lead.custom.form.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='opportunity_partner']" position="inside">
                <field name="designer_id"/>
                <field name="first_delivery_date" attrs="{'required': [('stage_id', '=', 6)], 'invisible': [('stage_id', '!=', 5)]}"/>
            </xpath>
            <xpath expr="//page[@name='lead']" position="before">
                <page string="Part of Hours">
                    <field name="timesheet_ids"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
