<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_form_instance_form">
        <field name="name">product_template_form_instance.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="id"/>
                <field name="id_form"/>
            </xpath>
            <xpath expr="//group[@name='sale']" position="before">
                <group string="Price">
                    <field name="item_ids" nolabel="1"/>
                </group>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="product_template_form_instance_search">
        <field name="name">product_template_form_instance.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="filter_domain">['|', '|', '|', '|', ('product_variant_ids.default_code', 'ilike', self),('name', 'ilike', self),('barcode', 'ilike', self),('product_variant_ids.default_code', 'ilike', self),('id_form', 'ilike', self)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
