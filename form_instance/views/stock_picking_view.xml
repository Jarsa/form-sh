<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_picking_form_custom" model="ir.ui.view">
        <field name="name">view.picking.form.custom</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="product_supplier_name"/> 
                <field name="type_operation_line" invisible="1"/>
                <field name="price_unit" attrs="{'invisible': [('type_operation_line','!=','incoming')]}"/>
                <field name="subtotal" attrs="{'invisible': [('type_operation_line','!=','incoming')]}"/>
            </xpath>
             <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="product_supplier_name"/>
            </xpath>
             <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom_qty']" position="after">
                <field name="type_operation" invisible="1"/>
                <field name="price_unit" attrs="{'invisible': [('type_operation','!=','incoming')]}"/>
                <field name="subtotal" attrs="{'invisible': [('type_operation','!=','incoming')]}"/>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="groups">base.group_system</attribute>
            </xpath>
            <xpath expr="//field[@name='move_line_ids_without_package']/tree" position="attributes">
                <attribute name="create">false</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_picking_tree_custom" model="ir.ui.view">
        <field name="name">view.picking.tree.custom</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="priority" eval="110"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="replace">
                <field name="scheduled_date" invisible="True"/>
                <field name="create_date"/>
            </xpath>
        </field>
    </record>
</odoo>
