<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_account_move_inherit_form">
        <field name="name">view.account.move.inherit.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_post'][1]" position="attributes">
                <attribute name="groups">account.group_account_invoice,form_instance.group_payable_form,form_instance.group_receivable_form</attribute>
            </xpath>
            <xpath expr="//header/button[@name='action_post'][2]" position="attributes">
                <attribute name="groups">account.group_account_invoice,form_instance.group_payable_form,form_instance.group_receivable_form</attribute>
            </xpath>
            <xpath expr="//header/button[@name='button_draft']" position="attributes">
                <attribute name="groups">account.group_account_invoice,form_instance.group_payable_form,form_instance.group_receivable_form</attribute>
            </xpath>
            <xpath expr="//button[@name='action_register_payment']" position="attributes">
                <attribute name="groups">form_instance.group_receivable_form,account.group_account_invoice</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_origin']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <field name="authorized" invisible="1"/>
                <button
                    name="authorize_cancelation"
                    string="Authorize cancelation"
                    type="object"
                    icon="fa-check-square-o"
                    groups="form_instance.group_activate_cancel_form" 
                    attrs="{
                        'invisible': [
                            '|',
                            ('move_type', 'in', ['entry', 'in_invoice', 'in_refund']),
                            ('authorized', '!=', False),
                        ],
                    }"/>
                <button
                    name="cancel_cancelation"
                    string="Cancel cancelation"
                    type="object"
                    groups="form_instance.group_activate_cancel_form" 
                    attrs="{
                        'invisible': [
                            '|',
                            ('state', 'in', ['draft', 'cancel']),
                            ('authorized', '!=', True),
                        ],
                    }"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_uom_id']" position="after">
                <field name="category_id"/>
            </xpath>
        </field>
    </record>
     <record model="ir.ui.view" id="view_account_move_inherit_form2">
        <field name="name">view.account.move.inherit.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_edi.view_move_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_cancel_posted_moves']" position="attributes">
                <attribute name="groups">account.group_account_invoice,form_instance.group_payable_form,form_instance.group_receivable_form</attribute>
                <attribute name="attrs">{'invisible': ['|', ('authorized', '!=', True), ('edi_show_cancel_button', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="account_move_custom_form_instance_tree">
        <field name="name">account_move_custom_form_instance.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="attributes">
                <attribute name="invisible" eval="0"/>
            </xpath>
            <xpath expr="//field[@name='invoice_date_due']" position="attributes">
                <attribute name="widget">0</attribute>
            </xpath>
        </field>
    </record>
</odoo>
