<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_request_custom_form">
        <field name="name">mrp_request_product_name.form</field>
        <field name="model">mrp.request</field>
        <field name="inherit_id" ref="mrp_request.view_mrp_request_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_id']" position="after">
                <field name="product_supplier_name"/>
                <field name="product_category_id"/>
            </xpath>
            <xpath expr="//field[@name='date_planned_start']" position="after">
                <field name="create_date"/>
            </xpath>
            <xpath expr="//header/button[@name='button_done']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="mrp_request_custom_tree">
        <field name="name">mrp_request_product_name.tree</field>
        <field name="model">mrp.request</field>
        <field name="inherit_id" ref="mrp_request.view_mrp_request_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_supplier_name"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="after">
                <button
                        groups="mrp_request.group_mrp_request_manager"
                        name="button_approved"
                        states="to_approve,draft"
                        icon="fa-check"
                        type="object"
                    />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="view_mrp_request_search">
        <field name="name">view.mrp.request.search</field>
        <field name="model">mrp.request</field>
        <field name="inherit_id" ref="mrp_request.view_mrp_request_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pending_qty']" position="after">
                <filter domain="[('origin','!=', False)]" help="Requested by system" name="requested_by_system" string="Requested by system"/>
                <filter domain="[('origin','=', False)]" help="Requested manually" name="requested_manually" string="Requested manually"/>
            </xpath>
        </field>
    </record>
</odoo>
