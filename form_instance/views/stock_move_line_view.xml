<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="stock_move_line_form_instance_form">
        <field name="name">stock_move_line_form_instance.form</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_done']" position="before">
                <field name="product_uom_qty"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="view_stock_move_line_detailed_operation_tree">
        <field name="name">stock_move_line_form_instance.form</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_supplier_name"/> 
                <field name="type_operation_line" invisible="1"/>
                <field name="price_unit" optional="hide" attrs="{'invisible': [('type_operation_line','!=','incoming')]}"/>
                <field name="subtotal" optional="hide" attrs="{'invisible': [('type_operation_line','!=','incoming')]}"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='location_dest_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>
</odoo>
