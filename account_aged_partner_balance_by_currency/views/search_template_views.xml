<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="search_template_currency_options">
        <a type="button" class="dropdown-toggle" data-toggle="dropdown">
            <span class="fa fa-money"/> Currency:
        </a>
        <div class="dropdown-menu o_filters_menu" role="menu">
            <t t-if="options.get('currencies')">
                <a role="menuitem" class="dropdown-item js_account_reports_one_choice_filter" title="None" data-id="True" data-filter="currency_id">None</a>
                <t t-foreach="options.get('currencies')" t-as="currency">
                    <a role="menuitem" class="dropdown-item js_account_reports_one_choice_filter" t-att-title="currency['name']" t-att-data-id="currency['id']" data-filter="currency_id">
                        <t t-esc="currency['name']"/>
                    </a>
                </t>
            </t>
        </div>
    </template>
    <template id="search_template" inherit_id="account_reports.search_template">
        <xpath expr="//div[hasclass('o_account_reports_filter_partner')]" position="after">
            <t t-if="options.get('currencies')">
                <div class="btn-group o_dropdown o_account_reports_filter_currency">
                    <t t-call="account_aged_partner_balance_by_currency.search_template_currency_options"/>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
