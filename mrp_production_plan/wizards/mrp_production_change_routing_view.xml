<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_production_change_routing_form">
        <field name="name">mrp_production_change_routing.form</field>
        <field name="model">mrp.production.change.routing</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="routing_id" required="1" domain="[('product_id', '=', product_id), ('id', '!=', current_routing_id)]"/>
                        <field name="production_id" invisible="1"/>
                        <field name="current_routing_id" invisible="1"/>
                        <field name="product_id" invisible="1"/>
                    </group>
                    <footer>
                        <button name="change_routing" string='Confirm' type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_mrp_production_change_routing_wizard" model="ir.actions.act_window">
        <field name="name">Change Routing</field>
        <field name="res_model">mrp.production.change.routing</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
