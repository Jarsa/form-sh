<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_production_plan_form">
        <field name="name">mrp_production_plan.form</field>
        <field name="model">mrp.production.plan</field>
        <field name="arch" type="xml">
            <form string="Production Plan">
                <header>
                    <button name="get_mrp_production_requests" string="Get Manufacturing Requests" type="object"/>
                    <button name="button_draft"
                        states="approved,cancel,done"
                        string="Reset"
                        type="object"/>
                    <button name="button_approved" states="draft"
                            string="Approve" type="object" class="oe_highlight"/>
                    <button name="button_done" states="approved"
                            string="Done" type="object" class="oe_highlight"/>
                    <button name="button_cancel" states="approved"
                            string="Reject" type="object"/>
                    <button name="run_plan" string="Run Plan" type="object" class="oe_highlight" states="approved"/>
                    <button name="re_plan" string="Re-Plan" type="object" class="oe_highlight" states="planned"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,done,planned"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object"
                            name="action_view_productions"
                            class="oe_stat_button"
                            icon="fa-wrench"
                            string="Productions"
                            attrs="{'invisible': [('production_ids', '=', [])]}">
                        </button>
                    </div>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="line_ids">
                                <tree editable="bottom" create="0" decoration-danger="not planned and production_id" decoration-success="planned and production_id">
                                    <field name="planned" invisible="1"/>
                                    <field name="sequence" widget="handle"/>
                                    <field name="request_id"/>
                                    <field name="product_id"/>
                                    <field name="required_qty"/>
                                    <field name="requested_qty"/>
                                    <field name="production_id"/>
                                    <field name="date_planned_start_wo"/>
                                    <field name="date_planned_finished_wo"/>
                                    <field name="done_qty"/>
                                    <field name="product_uom_id" groups="uom.group_uom"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Workcenter Lines">
                            <field name="workcenter_line_ids">
                                <tree create="0" edit="0">
                                    <field name="workcenter_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Manufacturing requests">
                            <field name="request_ids"/>
                        </page>
                        <page string="Manufacturing orders">
                            <field name="production_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="mrp_production_plan_workcenter">
        <field name="name">mrp_production_plan_workcenter.form</field>
        <field name="model">mrp.production.plan.workcenter</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="workcenter_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="plan_id" readonly="1"/>
                    </group>
                </group>
                <field name="line_ids">
                    <tree editable="bottom" decoration-success="date_planned_start&gt;=current_date and state == 'ready'" decoration-muted="state in ('done','cancel')" decoration-danger="date_planned_start&lt;current_date and state in ('ready')">
                        <field name="sequence" widget="handle"/>
                        <field name="name"/>
                        <field name="date_planned_start"/>
                        <field name="date_planned_finished"/>
                        <field name="workcenter_id" widget="selection"/>
                        <field name="production_id"/>
                        <field name="product_id"/>
                        <field name="qty_production"/>
                        <field name="product_uom_id"/>
                        <field name="state"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="mrp_production_plan_tree">
        <field name="name">mrp_production_plan.tree</field>
        <field name="model">mrp.production.plan</field>
        <field name="arch" type="xml">
            <tree string="description">
                <field name="name"/>
                <field name="user_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="action_mrp_production_plan" model="ir.actions.act_window">
        <field name="name">Production Plan</field>
        <field name="res_model">mrp.production.plan</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="mrp_production_plan_menu" name="Production Plan" parent="mrp.menu_mrp_manufacturing" action="action_mrp_production_plan"/>
</odoo>
