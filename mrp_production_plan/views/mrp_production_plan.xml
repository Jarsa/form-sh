<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="mrp_production_plan_form">
        <field name="name">mrp_production_plan.form</field>
        <field name="model">mrp.production.plan</field>
        <field name="arch" type="xml">
            <form string="Production Plan">
                <header>
                    <button name="get_mrp_production_requests" string="Get Maufacturing Requests" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,done"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Line">
                            <field name="line_ids" readonly="0">
                                <tree editable="bottom">
                                    <field name="request_id"/>
                                    <field name="product_id"/>
                                    <field name="required_qty"/>
                                    <field name="qty"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Manufacturing requests">
                            <field name="request_ids"/>
                        </page>
                        <page string="Manufacturing orders">
                            <field name="production_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="mrp_production_plan_tree">
        <field name="name">mrp_production_plan.tree</field>
        <field name="model">mrp.production.plan</field>
        <field name="arch" type="xml">
            <tree string="description">
                <field name="name"/>
                <field name="user_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="action_mrp_production_plan" model="ir.actions.act_window">
        <field name="name">Production Plan</field>
        <field name="res_model">mrp.production.plan</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="mrp_production_plan_menu" name="Production Plan" parent="mrp.menu_mrp_manufacturing" action="action_mrp_production_plan"/>
</odoo>
