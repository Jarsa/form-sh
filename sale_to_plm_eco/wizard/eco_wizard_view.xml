<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_create_plm_eco" model="ir.ui.view">
        <field name="name">Create Engineering Change Order(ECO)</field>
        <field name="model">sale.order.eco.wizard</field>
        <field name="arch" type="xml">
            <form string="Create ECO">
                <field name="line_ids" nolabel="1">
                    <tree create="0" editable="top">
                        <field name="product_id"/>
                        <field name="product_uom_qty"/>
                        <field name="uom_id"/>
                        <field name="bom_ids" invisible="1"/>
                        <field name="bom_id" domain="[('id', 'in', bom_ids)]"/>
                        <field name="name"/>
                        <field name="type_id"/>
                    </tree>
                </field>
                <footer>
                    <button string="Create eco" type="object" name="create_eco" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_so_eco_wizard" model="ir.actions.act_window">
        <field name="name">Create Engineering Change Order(ECO)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.eco.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
